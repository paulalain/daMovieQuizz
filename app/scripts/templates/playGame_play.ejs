<div class="col-xs-12 col-sm-2 col-md-2 col-lg-2">
    <div id="scoreBoard">
        <span>Score: <%= score %></span>
    </div>
</div>
<div class="col-xs-12 col-sm-10 col-md-10 col-lg-10">
    <div id="gameContent">
        <div class="row">
            <h3>Does this actor play in this movie?</h3>
        </div>
        <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                <img src="<%= actorImage %>" class="img_poster" />
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                <img src="<%= movieImage %>" class="img_poster" />
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                 <h4 id="actorName"><%= actorName %></h4>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                <h4 id="movieTitle"><%= movieTitle %></h4>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                 <button id="yes" class="btn btn-success btn-lg"><span class="glyphicon glyphicon-ok"> </span> Yes</button>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                 <button id="no" class="btn btn-danger btn-lg"><span class="glyphicon glyphicon-remove"> </span> No</button>
            </div>
        </div> 
    </div> 
</div>